<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.trading_android.view.CircleImageView
            android:id="@+id/post_reply_userImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/userimg"
            app:civ_border_width="0.5dp" />
        <TextView
            android:id="@+id/post_inner_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="吃瓜群众1"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/reply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年4月6日"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="13dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/inner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复@半蹲先生:"
            android:layout_marginTop="5dp"
            ></TextView>
        <TextView
            android:id="@+id/inner_cont"
            android:layout_width="240dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="我觉得楼主说的对"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp" />
        <TextView
            android:id="@+id/reply_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="X楼"/>
    </LinearLayout>

</LinearLayout>