<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_head_title_color">
    <RelativeLayout
        android:id="@+id/person_rela"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="150dp">
        <com.example.trading_android.view.CircleImageView
            android:id="@+id/person_img"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            app:civ_border_color="@color/bottom_icon_up"
            android:src="@drawable/userimg"
            app:civ_border_width="2dp" />
        <TextView
            android:id="@+id/person_name"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="昵称"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_toRightOf="@id/person_img"
            android:textStyle="bold"/>
    </RelativeLayout>

    <include layout="@layout/fragment3_menu_list"/>

</LinearLayout>